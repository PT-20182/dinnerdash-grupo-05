<div class="main-container">
  <div class="img-lateral"></div>
  <div class="form-area">
    <div class="form-container">
      <div class="form-content">
        <h2 class="dinnerdash-tittle">dinnerdash</h2>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="account-form">
            <%= f.label :email, class: 'form-legenda' %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'input-text' %>
            <%= f.label :password, class: 'form-legenda' %>
            <%= f.password_field :password, autocomplete: "current-password", class: 'input-text' %>

            <%= f.submit "fazer login", class: 'my-button' %>
          </div>
        <% end %>

        <hr class="hr-divider">

        <div class="change-form-container">
          <p class="change-form-legenda">NÃ£o possui conta?</p>
          <%= link_to "fazer meu cadastro", new_user_registration_path, class: "my-button" %>
        </div>
      </div>
    </div>
  </div>
</div>
