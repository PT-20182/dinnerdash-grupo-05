<div class="main-container">
    <div class="img-lateral"></div>
    <div class="form-area">
        <div class="form-container">
            <div class="form-content">
                <h2 class="dinnerdash-tittle">dinnerdash</h2>

                <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                    <div class="account-form">
                        <%= f.label "Nome", class: "form-legenda" %> <br>
                        <%= f.text_field :name, class: "input-text" %> <br> 
                        <%= f.label "Email", class: "form-legenda" %> <br>
                        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input-text" %> <br>
                        <%= f.label "Senha", class: "form-legenda" %> <br>
                        <%= f.password_field :password, class: "input-text"%> <br>
                        <%= f.label "Confirme_sua_senha", class: "form-legenda" %> <br>
                        <%= f.password_field :password_confirmation, class: "input-text" %> <br>
                        <%= f.submit "cadastrar", class: "my-button" %>
                    </div>
                <% end %>

                <hr class="hr-divider">

                <div class="change-form-container">
                    <p class="change-form-legenda">JÃ¡ possui conta?</p>
                    <%= button_to "fazer login", new_session_path(resource_name), class: "my-button" %>
                </div>
            </div>
        </div>
    </div>
</div>