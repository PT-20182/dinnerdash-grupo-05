<div class="main-container">

<!-- imagem superior -->
<div class="img-superior">

  <!-- menu superior -->
  <div class="superior-menu navbar">
    <span class="title navbar-brand">dinnerdash</span>

    <span class="side-links">
      <span class="-active">backoffice</span>
      <span>perfil</span>
      <span><%= link_to 'sair', destroy_user_session_path, method: :delete, class: 'clean-link' %></span>
    </span>
  </div>

  <!-- titulo do backoffice -->
  <div class="pagetitle-container">
    <div class="pagetitle-area">
      <div class="title">Backoffice</div>
      <div class="explanation">Gerencie pedidos, refeições e mais.</div>
    </div>
  </div>
</div>

<!-- menu seletor -->
<div class="selector-menu">
  <div>Pedidos</div>
  <div>Usuários</div>
  <div>Refeições</div>
  <div>Categorias de Refeições</div>
</div>

<!-- area da tabela -->
<div class="table-area">
  <table class="backoffice-table">
    <thead>
      <tr class="table-header">
        <th>Nome</th>
        <th>Número de Refeições</th>
        <th colspan="3">Cadastrada em</th>
      </tr>
    </thead>
    <tbody>
      <% @meal_categories.each do |category| %>
        <%= render "category", category: category %>
      <% end %>
    </tbody>
  </table>
</div>
</div>