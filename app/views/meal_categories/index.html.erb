<div class="main-container">

  <!-- imagem superior -->
  <%= render "superior_image" %>

  <!-- menu seletor -->
  <%= render "selector_menu" %>

  <!-- area da tabela -->
  <div class="table-area">
    <table class="backoffice-table">
      <thead>
        <tr class="table-header">
          <th>Nome</th>
          <th>Número de Refeições</th>
          <th colspan="3">Cadastrada em</th>
        </tr>
      </thead>
      <tbody>
        <% @meal_categories.each do |category| %>
          <%= render "category", category: category %>
        <% end %>
      </tbody>
    </table>
    <div class="newcateg-container">
      <%= link_to 'Criar categoria de refeições', new_meal_category_path, class: "newcateg-link" %>
    </div>
  </div>
</div>